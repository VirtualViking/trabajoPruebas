{
  "name": "inventory-backend",
  "version": "1.0.0",
  "description": "Backend API para sistema de inventario",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "db:init": "node src/config/init-db.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --testPathPattern=tests/unit --coverage --forceExit",
    "test:integration": "jest --testPathPattern=tests/integration --forceExit --runInBand",
    "test:e2e": "jest --testPathPattern=tests/e2e --forceExit --runInBand"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "selenium-webdriver": "^4.15.0",
    "chromedriver": "^119.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "testTimeout": 30000
  }
}
